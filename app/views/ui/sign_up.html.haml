.container#signup-page
  %h3 Create Account
  %hr
  .well.col-md-6.col-md-offset-3
    .form
      .col-md-12#create-credentials
        .form-group
          %label Full Name
          %input.form-control{:type => "Full Name", :placeholder => "Full Name"}
        .form-group
          %label Email Address
          %input.form-control{:type => "Email", :placeholder => "Email Address"}
        .form-group
          %label Password
          %input.form-control{:type => "Password", :placeholder => "Password"}
        %button.btn.btn-success Sign Up