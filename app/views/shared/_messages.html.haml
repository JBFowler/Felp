- flash.each do |name, msg|
  <div class="alert alert-\#{name == "error" ? "danger" : "success} alert-dismissible">
  %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
    %span{"aria-hidden" => "true"} &times;
  %strong
    - msg